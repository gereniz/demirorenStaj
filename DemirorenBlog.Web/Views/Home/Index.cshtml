@{
    ViewData["Title"] = "Home Page";
}
@model List<PostViewModel>
<nav aria-label="Page nagivation example">
    <ul class="pagination">
        @{
            for (int i = 0; i < @ViewBag.pageingCount; i++)
            {
                int pageName = i + 1;
                <li class="page-item">
                    <a class="page-link" href="Home?page=@pageName"> @pageName </a>
                </li>
            }
        }
    </ul>
</nav>

<form action="Home/Search?Word=" method="get">
    <input type="text" class="form-control" name="Word" />
    <input type="submit" class="btn btn-primary" value="Search" />
</form>
@foreach (var item in Model)
{
    <h1> @item.Title</h1>
    <p> @item.Content</p>
}